@page "/leave-requests/employee-index"
@attribute [Authorize]


<h1>Leave Request Log</h1>
<hr />
@if (string.IsNullOrEmpty(Message) == false)
{
    <div class="alert alert-danger">
        @Message
    </div>
}
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                Employee Name
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Leave Type
            </th>
            <th>
                Date Requested
            </th>

            <th>
                Approval Status
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LeaveRequests)
        {
            <tr>
                <td>
                    @item.Employee.FirstName @item.Employee.LastName
                </td>
                <td>
                    @item.StartedAt.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @item.EndedAt.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @item.LeaveType.Name
                </td>
                <td>
                    @item.RequestedAt.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @if (item.Canceled)
                    {
                        <span class="badge bg-secondary">Cancelled</span>
                    }
                    else if (item.IsApproved is true)
                    {
                        <span class="badge bg-success">Approved</span>
                    }
                    else if (item.IsApproved is false)
                    {
                        <span class="badge bg-danger">Rejected</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Pending</span>
                    }
                </td>
                <td>
                    @if (!item.Canceled /*&& item.StartDate > DateTime.Now*/)
                    {
                        <button @onclick="@(() => CancelRequestAsync(item.Id))" class="btn btn-danger">
                            <i class="fa fa-file"></i>Cancel Request
                        </button>
                    }


                </td>
            </tr>
        }
    </tbody>
</table>